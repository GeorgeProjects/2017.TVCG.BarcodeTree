<div id = "selection-config-div">
				<div class = "panel-header">
        <div id = "node-label">
            <span id = 'title-panel'>Selection Panel</span>
            <span id = 'control-panel'>
                <i id = "config-minimize" class="fa fa-window-minimize" aria-hidden="true"></i>
                <i id = "config-close" class="fa fa-window-close-o" aria-hidden="true"></i>
            </span>
        </div>
    </div>
    <div class = "panel-content">
        <div class = "table">
            <div id = "tooltip-controller">Tooltip:</div>
            <div id = "tooltip-mode" class="btn-group" role="group">
                <button type="button" class="btn btn-default btn-lg mode-button active" aria-label="Left Align" id="tooltip-mode-button">
																			<i class="fa fa-commenting" aria-hidden="true"></i> <span id="tooltip-mode-label">On</span>
                </button>
            </div>
            <div id = "selection-mode-controller">Selection Mode:</div>
            <div id = "selection-mode" class="btn-group" role="group">
                <button type="button" class="btn btn-default btn-lg mode-button active" aria-label="Right Align" id="selection-highlight-button">
                   <i class="fa icon iconfont icon-highlight-mode-"></i> <span class="tree-config-label">highlight</span>
                </button>
                <button type="button" class="btn btn-default btn-lg mode-button" aria-label="Left Align" id="selection-unhighlight-button">
                   <i class="fa icon iconfont icon-highlight-mode"></i> <span class="tree-config-label">unhighlight</span>
                </button>
            </div>
        </div>
    </div>
</div>